<div class="wrapper">
<h3>Your Selling History</h3>
<% if @products.count > 0 %>
<div class="product-table">
    <table>
        <tr>
            <th>Product Id</th>           
            <th>Product Name</th>
            <th>Status</th>       
            <th></th>
        </tr>
        <% @products.each do |product| %>
            <tr>
                <td><%= product.id %></td>   
                <td><%=product.name %></td>
                <% if product.status? %>
                    <td>Not Sold Yet</td>
                <% else %>
                    <td>Sold</td>
                <% end %>
                <td><%= link_to "View", "/products/#{product.id}/sell" %></td>
            </tr>
        <% end %>
    </table>
</div>
<% end %>
</div>