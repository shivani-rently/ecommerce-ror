<%= render "product_details", product: @product %>
<%= form_with url: "/products/#{@product.id}/buy", method: :put do |form| %>
    <div style="width: 340px; margin: 0 auto;">
        <%= form.label "Quantity: ", class: 'labelName' %>
        <%= form.text_field :quantity, class: 'fieldName' %><br>
    </div>
    <%= form.submit "Buy" %>
<% end %>
<% if @like != [] %>
<%= button_to "Unlike", "/api/likes", method: :post, params: {id: @product.id} %>
<% else %>
<%= button_to "Like", "/api/likes", method: :post, params: {id: @product.id} %>
<% end %>
<br>
<%= link_to "Go Back", "/products?type=buy" %>
