<h3>Products List</h3>
<% if @products.count > 0 %>
<%= render "filters", product: @product%>
<div class="container" style="align-items: flex-start">
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Product Name </th>           
      <th scope="col">Product Category </th>        
      <th scope="col">Price </th>      
      <th scope="col"></th>
    </tr>
  </thead>
  </tbody>
 <% @products.each do |product| %>
  <tr scope="row">
    <td><%= product.name%></td>   
    <td><%=product.category %></td>
    <td><%=product.price %></td>
    <td><%= link_to "View", "/products/#{product.id}/buy" %></td>
  </tr>
  <% end %>
  </tbody>
</table>
</div>
<% end %>
